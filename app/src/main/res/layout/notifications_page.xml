<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-70dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-62dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />

    <RelativeLayout
        android:id="@+id/search_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_toRightOf="@+id/back_arrow"
            android:id="@+id/Notifications"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="#157177"
            android:layout_marginTop="75dp"
            android:drawableRight="@drawable/notification_bell"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Notifications"
            android:layout_alignParentRight="true"
            android:text="Clear All"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#EBB800"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12"
        android:orientation="vertical"
        android:layout_below="@+id/search_div">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="You have added a mentor, Alex. Thank you!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/close_icon"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#157177"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Your favorites list is expanding. Impressive"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/close_icon"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#157177"/>

        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="You have a new message in community. "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/close_icon"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#157177"/>

        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Your favorite mentor is Online. Say Hi to him."
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/close_icon"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#157177"/>

        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=" Thank you for booking a session. Good Luck."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/close_icon"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#157177"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_links"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="6"
        android:orientation="vertical"
        android:align="@+id/navbar"
        android:background="#B6ECE7"
        android:layout_below="@+id/search_options"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:paddingTop="10dp"
                android:text="Browse Categories"
                android:textColor="#147076"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

