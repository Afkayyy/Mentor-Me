<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".Main_Menu_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-70dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-62dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />

    <RelativeLayout

        android:id="@+id/Greetings"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:text="Hello,"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="70dp"
                android:text="Ali"
                android:textStyle="bold"
                android:textColor="#157177"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:text="Ready for mentorship? Letâ€™s begin the journey!"
                android:textColor="#157177"
                android:textSize="15sp" />

        </FrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/Greetings"
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <FrameLayout

        android:id="@+id/main_opt"
        android:layout_alignTop="@+id/Greetings"
        android:layout_marginTop="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/option_div"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#DEF8F8"
            android:scaleType="fitCenter"
            android:src="@drawable/dark_green_box">

        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="false">
        </TextView>

    </FrameLayout>

    <FrameLayout

        android:id="@+id/sec_opt"
        android:layout_alignTop="@+id/Greetings"
        android:layout_toRightOf="@+id/main_opt"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DEF8F8">

        <ImageButton
            android:id="@+id/option_2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#DEF8F8"
            android:scaleType="fitCenter"
            android:src="@drawable/light_green_box">

        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#174E49"
            android:clickable="false">
        </TextView>

    </FrameLayout>

    <FrameLayout

        android:id="@+id/third_opt"
        android:layout_alignTop="@+id/Greetings"
        android:layout_toRightOf="@+id/sec_opt"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DEF8F8">

        <ImageButton
            android:id="@+id/option_3"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="#DEF8F8"
            android:scaleType="fitCenter"
            android:src="@drawable/light_green_box">

        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrepreneurship "
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#174E49"
            android:clickable="false">
        </TextView>

    </FrameLayout>

    <FrameLayout

        android:id="@+id/fourth_opt"
        android:layout_alignTop="@+id/Greetings"
        android:layout_toRightOf="@+id/third_opt"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DEF8F8">

        <ImageButton
            android:id="@+id/option_4"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="#DEF8F8"
            android:scaleType="fitCenter"
            android:src="@drawable/light_green_box">

        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Growth "
            android:textSize="14dp"
            android:paddingLeft="2dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#174E49"
            android:clickable="false">
        </TextView>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Mentors for you"
        android:textColor="#244A47"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="190dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all"
        android:textColor="#244A47"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="192dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#147076"
        android:weightSum="4"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/home_icon_clicked"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="13sp"
                android:layout_gravity="bottom|center_horizontal"
                android:textAlignment="center"
                android:textColor="#DDF7F7"
                android:layout_marginTop="8dp"
                android:clickable="false"/>
        </FrameLayout>



    </LinearLayout>


        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="center">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_icon"
                    android:layout_marginRight="20dp"
                    app:tint="#51A8A6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="13sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center"

            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/chat_icon"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="30dp"
                    android:clickable="false"/>
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/person_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:civ_border_color="#147076"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:civ_border_width="15dp"
        android:layout_marginBottom="20dp"
        android:src="#FFFFFF" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        />
</RelativeLayout>

