<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".Book_Session_Activity">


    <LinearLayout
        android:id="@+id/search_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blue_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_arrow_white"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/call_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/call_icon"
                android:layout_marginTop="60dp"
                />

            <TextView
                android:id="@+id/video_call_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/video_icon_white"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="John Cooper"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Community"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="7dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp"
                    app:civ_border_color="#FFC909"
                    app:civ_border_width="3dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/john1" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:civ_border_color="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    app:civ_border_width="5dp"
                    android:layout_marginBottom="20dp"
                    android:src="#FFC909" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/search_div"
        android:layout_above="@+id/chat_box"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="right">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingRight="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="15dp"
                    android:text=" How was your experience with his\n
mentorship? Satisfied??"
                    android:background="@drawable/light_green_box"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:textSize="12sp"

                    android:layout_gravity="right"
                    android:textColor="#586363"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:src="#147076" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingLeft="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="15dp"
                    android:text=" Worth it!!"
                    android:background="@drawable/white_box"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#586363"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:src="#DDACED" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingLeft="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="15dp"
                    android:text=" Impressive"
                    android:background="@drawable/white_box"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#586363"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/doctor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingLeft="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="15dp"
                    android:text="You’re missing out! Go take it!!!"
                    android:background="@drawable/white_box"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#586363"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_box"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/navbar_chat"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:background="@drawable/blue_box">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/paper_clip_icon"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/gallery_icon"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="bottom"
            android:layout_height="30dp"
            android:textSize="19sp"
            android:text=" Type something ..."
            android:paddingBottom="5dp"
            android:textColor="#DDF7F7"/>


        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/camera_icon_lightgreen"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mic_icon_lightgreen"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/send_arrow_icon"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/navbar_chat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#147076"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_link"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/home_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="13sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
            </FrameLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/search_link"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_icon"
                    android:layout_marginRight="20dp"
                    app:tint="#51A8A6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="13sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center"

            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/chat_icon_clicked"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#DDF7F7"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="30dp"
                    android:clickable="false"/>
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/person_link"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/person_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:civ_border_color="#147076"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:civ_border_width="15dp"
        android:layout_marginBottom="20dp"
        android:src="#FFFFFF" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        />

</RelativeLayout>

