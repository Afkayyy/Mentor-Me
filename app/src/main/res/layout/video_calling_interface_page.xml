<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBCBCB">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50:08"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@drawable/cream_box"
        android:layout_alignTop="@+id/call_opt"
        android:layout_alignEnd="@+id/call_opt"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-220dp"
        />


    <LinearLayout
        android:id="@+id/call_opt"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="#DDF7F7"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="8dp"
            android:background="#9E9E9E"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="#147076"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:drawableTop="@drawable/mic_off_icon"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="#147076"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:drawableTop="@drawable/camera_off_icon"
                    android:layout_marginBottom="13dp"
                    android:clickable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="#147076"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:drawableTop="@drawable/loop_icon"
                    android:layout_marginBottom="13dp"
                    android:clickable="false"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="#A60606"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:drawableTop="@drawable/close_icon_white"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="20dp"

                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>