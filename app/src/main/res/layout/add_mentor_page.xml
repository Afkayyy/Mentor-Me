<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".Book_Session_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-70dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-62dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />

    <RelativeLayout
        android:id="@+id/search_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_toRightOf="@+id/back_arrow"

            android:id="@+id/Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Add New Mentor"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="#157177"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:layout_alignRight="@+id/Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Help us expand!"
            android:textSize="15sp"
            android:textColor="#157177"
            android:layout_marginTop="140dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/blue_box"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/first_option_layout"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/search_box">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:drawableTop="@drawable/video_icon"
                    android:text="Upload Video"

                    android:textColor="#157177"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_option_layout"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/search_box">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="30dp"
                    android:drawableTop="@drawable/camera_icon"
                    android:paddingLeft="30dp"
                    android:text="Upload Video"
                    android:textColor="#157177"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_below="@+id/Starting_text"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textColor="@android:color/white"
            android:background="#50C2C9"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"/>


        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/name_text"
            android:background="@drawable/white_box"
            android:hint="Enter Name"
            android:textColorHint="#918B8B"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:layout_alignLeftOf="@+id/email_text"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_below="@+id/Name"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Description"
            android:textColor="@android:color/white"
            android:background="#50C2C9"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"/>


        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/email_text"
            android:background="@drawable/white_box"
            android:hint="Enter Description"
            android:textColorHint="#918B8B"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:layout_alignLeftOf="@+id/email_text"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/contact_no_text"
            android:layout_width="wrap_content"
            android:layout_below="@+id/Email"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Status"
            android:textColor="@android:color/white"
            android:background="#50C2C9"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"/>


        <EditText
            android:id="@+id/Contact_No"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/contact_no_text"

            android:background="@drawable/white_box"
            android:hint="Available"
            android:textColorHint="#918B8B"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:layout_alignLeftOf="@+id/email_text"
            android:drawableRight="@drawable/dropdown_arrow"
            android:paddingRight="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:text="Upload"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/dark_green_box" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#147076"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/home_icon_clicked"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="13sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#DDF7F7"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
            </FrameLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_icon"
                    android:layout_marginRight="20dp"
                    app:tint="#51A8A6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="13sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center"

            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/chat_icon"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="30dp"
                    android:clickable="false"/>
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/person_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#51A8A6"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:civ_border_color="#147076"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:civ_border_width="15dp"
        android:layout_marginBottom="20dp"
        android:src="#FFFFFF" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        />

</RelativeLayout>

