<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".Book_Session_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-70dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-62dp"
        android:alpha="0.7"
        android:src="#A2E6DF" />

    <LinearLayout
        android:id="@+id/search_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="  Booked Sessions"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="#157177"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/search_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_below="@+id/search_div">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/John_coopy"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/john1"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/white_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cooper"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 24th Dec 2023"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="8sp"
                    android:textColor="#EBB800"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UX Designer @ Google"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:paddingLeft="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 1:00 pm"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="8sp"
                    android:textColor="#EBB800"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/emma1"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/white_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emma Phillips"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 1st Jan 2024"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="8sp"
                    android:textColor="#EBB800"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Android Developer"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:paddingLeft="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 09:00 pm
"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="8sp"
                    android:textColor="#EBB800"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

    </LinearLayout>

</RelativeLayout>

