<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBCBCB"
    android:orientation="vertical"
    tools:context=".Photo_Camera_Activity">

    <LinearLayout
        android:id="@+id/header_tab"
        android:layout_width="match_parent"
        android:background="#DDF7F7"
        android:orientation="horizontal"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_tab"
        android:orientation="horizontal"
        android:background="#CBCBCB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/close_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/hdr_icon"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/brightness_icon"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/camera_btn"
        android:background="#DDF7F7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/tab_opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">

            <FrameLayout

                android:id="@+id/main_opt"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slo-mo"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:clickable="false">
                </TextView>

            </FrameLayout>

            <FrameLayout

                android:id="@+id/sec_opt"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="#DEF8F8">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:clickable="false">
                </TextView>

            </FrameLayout>

            <FrameLayout

                android:id="@+id/third_opt"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:background="#DEF8F8">

                <ImageButton
                    android:id="@+id/option_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DEF8F8"
                    android:scaleType="fitCenter"
                    android:src="@drawable/light_green_box">

                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo "
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#174E49"
                    android:clickable="false">
                </TextView>

            </FrameLayout>

            <FrameLayout

                android:id="@+id/fourth_opt"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DEF8F8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Square "
                    android:textSize="14dp"
                    android:paddingLeft="2dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:clickable="false">
                </TextView>

            </FrameLayout>


            <FrameLayout

                android:id="@+id/fifth_opt"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DEF8F8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Potrait "
                    android:textSize="14dp"
                    android:paddingLeft="2dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:clickable="false">
                </TextView>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">


            <FrameLayout

                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="#DEF8F8">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:src="#147076" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gallery_icon"
                    android:layout_marginBottom="45dp"
                    />


            </FrameLayout>

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#DEF8F8">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:civ_border_color="#147076"
                    app:civ_border_width="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:src="#FFFFFF" />

            </FrameLayout>

            <FrameLayout

                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DEF8F8">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:src="#147076" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/video_icon_lightgreen"
                    android:layout_marginBottom="45dp"
                    />


            </FrameLayout>



        </LinearLayout>

    </LinearLayout>
</RelativeLayout>